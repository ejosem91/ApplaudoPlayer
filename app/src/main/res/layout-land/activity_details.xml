<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/canaryYellow"
        tools:context=".activity.DetailsActivity">

    <ImageView android:layout_width="320dp"
               android:contentDescription="@string/mileEight"
               android:layout_height="match_parent"
               android:src="@drawable/image_eight"
               android:id="@+id/iv_detail"
               android:scaleType="centerCrop"
               app:layout_constraintStart_toStartOf="parent"/>

    <TextView android:layout_width="0dp"
              android:layout_height="match_parent"
              android:text="@string/aboutSong"
              android:id="@+id/tv_about_song"
              android:layout_margin="10dp"
              android:textStyle="bold"
              android:layout_marginTop="40dp"
              android:layout_marginBottom="40dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@+id/iv_detail" app:layout_constraintHorizontal_bias="0.5"/>
</android.support.constraint.ConstraintLayout>